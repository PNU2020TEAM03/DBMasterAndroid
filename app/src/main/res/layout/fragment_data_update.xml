<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/data_update_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="데이터 갱신"
        android:textSize="36sp"
        android:fontFamily="@font/nanumsquare_aceb"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/data_update_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테이블의 데이터를 갱신할 수 있습니다."
        android:fontFamily="@font/nanumsquare_acr"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/data_update_title"
        app:layout_constraintLeft_toLeftOf="@id/data_update_title"/>

    <TextView
        android:id="@+id/data_update_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(문자열 데이터는 ' ' 로 감싸서 입력해주세요.)"
        android:fontFamily="@font/nanumsquare_acr"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/data_update_text1"
        app:layout_constraintLeft_toLeftOf="@id/data_update_text1"/>

    <TextView
        android:id="@+id/data_update_column_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="칼럼 선택"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumsquare_acb"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/data_update_title"
        app:layout_constraintTop_toBottomOf="@id/data_update_text2"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/data_update_column_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/data_update_title"
        app:layout_constraintTop_toBottomOf="@id/data_update_column_title"/>

    <TextView
        android:id="@+id/data_update_edittext_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="데이터 입력"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumsquare_acb"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/data_update_title"
        app:layout_constraintTop_toBottomOf="@id/data_update_column_spinner"/>

    <EditText
        android:id="@+id/data_update_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="갱신 할 데이터를 입력하세요."
        android:textSize="15sp"
        android:fontFamily="@font/nanumsquare_acr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/data_update_edittext_title"/>

    <TextView
        android:id="@+id/data_update_notify"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingStart="15dp"
        app:layout_constraintLeft_toLeftOf="@id/data_update_title"
        app:layout_constraintTop_toBottomOf="@id/data_update_input"
        android:fontFamily="@font/nanumsquare_acr"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/btn_data_update"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:text="업데이트"
        android:textSize="20sp"
        android:fontFamily="@font/nanumsquare_acb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>