<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/data_update_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="데이터 갱신"
        android:textSize="36sp"
        android:fontFamily="@font/nanumsquare_aceb"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/data_update_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테이블의 데이터를 갱신할 수 있습니다."
        android:fontFamily="@font/nanumsquare_acr"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/data_update_title"
        app:layout_constraintLeft_toLeftOf="@id/data_update_title"/>

    <TextView
        android:id="@+id/data_update_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(문자열 데이터는 ' ' 로 감싸서 입력해주세요.)"
        android:fontFamily="@font/nanumsquare_acr"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/data_update_text1"
        app:layout_constraintLeft_toLeftOf="@id/data_update_text1"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/data_update_column_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/data_update_title"
        app:layout_constraintTop_toBottomOf="@id/data_update_text2"/>

</androidx.constraintlayout.widget.ConstraintLayout>