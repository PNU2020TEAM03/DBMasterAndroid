<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/setting_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경."
        android:textSize="36sp"
        android:fontFamily="@font/nanumsquare_aceb"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/setting_password_label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="비밀번호를 새로 변경하세요."
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/setting_password_title"
        app:layout_constraintTop_toBottomOf="@id/setting_password_title"/>

    <TextView
        android:id="@+id/setting_password_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="@string/password_condition_str"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/setting_password_label1"
        app:layout_constraintTop_toBottomOf="@id/setting_password_label1"/>

    <EditText
        android:id="@+id/setting_old_password_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nanumsquare_acl"
        android:maxLines="1"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_password_label2"
        android:background="@drawable/background_edittext"
        android:paddingStart="20dp"
        android:hint="@string/current_password_hint"/>

    <EditText
        android:id="@+id/setting_new_password_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nanumsquare_acl"
        android:maxLines="1"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_old_password_input"
        android:background="@drawable/background_edittext"
        android:paddingStart="20dp"
        android:hint="@string/new_password_hint"/>

    <EditText
        android:id="@+id/setting_new_password_input_check"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nanumsquare_acl"
        android:maxLines="1"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_new_password_input"
        android:background="@drawable/background_edittext"
        android:paddingStart="20dp"
        android:hint="@string/new_password_check_hint"/>

    <TextView
        android:id="@+id/setting_password_valid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="15dp"
        app:layout_constraintLeft_toLeftOf="@id/setting_new_password_input_check"
        app:layout_constraintRight_toRightOf="@id/setting_new_password_input_check"
        app:layout_constraintTop_toBottomOf="@id/setting_new_password_input_check"
        android:fontFamily="@font/nanumsquare_acr"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/btn_setting_password"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:text="비밀번호 변경"
        android:textSize="20sp"
        android:fontFamily="@font/nanumsquare_acb"/>

</androidx.constraintlayout.widget.ConstraintLayout>