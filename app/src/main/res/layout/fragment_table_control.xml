<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/table_control_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테이블 관리."
        android:textSize="36sp"
        android:fontFamily="@font/nanumsquare_aceb"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/table_control_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여러가지 테이블 관리 기능을 사용할 수 있습니다."
        android:fontFamily="@font/nanumsquare_acr"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/table_control_title"
        app:layout_constraintLeft_toLeftOf="@id/table_control_title"/>

    <Button
        android:id="@+id/btn_table_control_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="데이터 INSERT"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumsquare_acr"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_setting_button"
        app:layout_constraintTop_toBottomOf="@+id/table_control_text1"/>

    <Button
        android:id="@+id/btn_table_control_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="데이터 UPDATE"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumsquare_acr"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_setting_button"
        app:layout_constraintTop_toBottomOf="@+id/btn_table_control_insert"/>

    <Button
        android:id="@+id/btn_table_control_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="데이터 DELETE"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumsquare_acr"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_setting_button"
        app:layout_constraintTop_toBottomOf="@+id/btn_table_control_update"/>

    <Button
        android:id="@+id/btn_table_control_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="테이블 JOIN"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumsquare_acr"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_setting_button"
        app:layout_constraintTop_toBottomOf="@+id/btn_table_control_delete"/>

    <Button
        android:id="@+id/btn_table_control_export"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="테이블 EXPORT"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumsquare_acr"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_setting_button"
        app:layout_constraintTop_toBottomOf="@+id/btn_table_control_join"/>

</androidx.constraintlayout.widget.ConstraintLayout>