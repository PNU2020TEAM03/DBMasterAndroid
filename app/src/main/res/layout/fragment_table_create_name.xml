<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/table_create_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테이블 이름 입력."
        android:textSize="36sp"
        android:fontFamily="@font/nanumsquare_aceb"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/table_create_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생성할 테이블의 이름을 입력해주세요."
        android:fontFamily="@font/nanumsquare_acr"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/table_create_name_title"
        app:layout_constraintLeft_toLeftOf="@id/table_create_name_title"/>

    <EditText
        android:id="@+id/id_input_table_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nanumsquare_acl"
        android:maxLines="1"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/table_create_name_text"
        android:background="@drawable/background_edittext"
        android:paddingStart="20dp"
        android:hint="테이블 이름을 입력하세요."/>

    <Button
        android:id="@+id/btn_table_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:text="다음으로"
        android:textSize="20sp"
        android:fontFamily="@font/nanumsquare_acb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>