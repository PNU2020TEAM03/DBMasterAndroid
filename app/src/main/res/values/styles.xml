<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="ToolBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:fontFamily">@font/nanumsquare_acb</item>
    </style>

    <style name="NavigationFont" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/nanumsquare_acr</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>
